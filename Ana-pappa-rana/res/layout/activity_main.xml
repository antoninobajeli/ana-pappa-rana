<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_20131119_191256"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <Button
        android:id="@+id/button_rana"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="73dp"
        android:layout_marginTop="184dp"
        android:layout_toLeftOf="@+id/button_scimmia"
        android:text="rana" />

     <Button
        android:id="@+id/button_ana"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_rana"
        android:layout_below="@+id/button_rana"
        android:text="ana" />
     
    <Button
        android:id="@+id/button_capra"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_ana"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="57dp"
        android:layout_toRightOf="@+id/button_ana"
        android:text="capra" />

    <Button
        android:id="@+id/button_pappa"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_ana"
        android:layout_centerHorizontal="true"
        android:text="pappa" />

    <Button
        android:id="@+id/button_scimmia"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_pesce"
        android:layout_toRightOf="@+id/button_pesce"
        android:text="scimmia" />

    <Button
        android:id="@+id/button_pesce"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_ana"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/button_pappa"
        android:text="pesce" />

