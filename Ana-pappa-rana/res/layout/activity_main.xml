<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_20131119_191256_2"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_rana"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="75dp"
        android:text="@string/rana"
        android:background="#ff000000"
        android:textColor="#00000000" />

    <Button
        android:id="@+id/button_scimmia"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button_pappa"
        android:layout_alignBottom="@+id/button_pappa"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_pappa"
        android:text="@string/scimmia"
        android:background="#00000000"
        android:textColor="#00000000" />

    <Button
        android:id="@+id/button_ana"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_rana"
        android:layout_below="@+id/button_rana"
        android:layout_marginTop="5dp"
        android:text="@string/ana"
        android:background="#00000000"
        android:textColor="#00000000" />

    <Button
        android:id="@+id/button_capra"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_pappa"
        android:layout_below="@+id/button_pappa"
        android:layout_marginTop="5dp"
        android:text="@string/capra"
        android:background="#00000000"
        android:textColor="#00000000" />

    <Button
        android:id="@+id/button_pesce"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_capra"
        android:layout_alignBottom="@+id/button_capra"
        android:layout_alignLeft="@+id/button_scimmia"
        android:layout_marginLeft="5dp"
        android:text="@string/pesce"
        android:background="#00000000"
        android:textColor="#00000000" />

    <Button
        android:id="@+id/button_pappa"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/button_rana"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/button_rana"
        android:background="#00000000"
        android:text="@string/pappa"
        android:textColor="#00000000" />
    
</RelativeLayout>